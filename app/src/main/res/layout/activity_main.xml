        android:padding="10dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text=""
            android:textSize="30dp"
            android:background="@drawable/circle2"
            android:id="@+id/circle2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="88dp" android:layout_marginEnd="236dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="212dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text=""
            android:textSize="30dp"
            android:background="@drawable/circle4"
            android:id="@+id/circle4"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginStart="236dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="220dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/circle5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="236dp"
        android:background="@drawable/circle5"
        android:padding="10dp"

        android:text=""
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text=""
            android:textSize="30dp"
            android:background="@drawable/circle6"
            android:id="@+id/circle6"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginStart="236dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="360dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="100dp"
            android:textColor="#ffffff"
            android:text="Drop here"
            android:textStyle="bold"
            android:textSize="50dp"

            android:id="@+id/target"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="14dp"
/>
</androidx.constraintlayout.widget.ConstraintLayout>